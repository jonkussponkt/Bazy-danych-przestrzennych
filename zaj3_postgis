--4.Wyznacz liczbę budynków (tabela: popp, atrybut: f_codedesc, reprezentowane, jako punkty) 
--położonych w odległości mniejszej niż 1000 m od głównych rzek. 
--Budynki spełniające to kryterium zapisz do osobnej tabeli tableB.

SELECT COUNT(*) FROM popp
INNER JOIN majrivers ON popp.f_codedesc = 'Building' AND ST_Contains(ST_Buffer(majrivers.geom, 1000), popp.geom);

SELECT popp.gid, popp.cat, f_codedesc, f_code, type, popp.geom INTO tableB FROM popp
INNER JOIN majrivers ON popp.f_codedesc = 'Building' AND ST_Contains(ST_Buffer(majrivers.geom, 1000), popp.geom)
ORDER BY gid;

SELECT * FROM tableB;

----------------------------------------------------------------------------------

--5.Utwórz tabelę o nazwie airportsNew. Z tabeli airports do zaimportuj nazwy lotnisk, ich geometrię, 
--a także atrybut elev, reprezentujący wysokość n.p.m.

CREATE TABLE airportsNew (airport_name VARCHAR(40), airport_geom GEOMETRY, airport_elev REAL);
INSERT INTO airportsNew 
SELECT airports.name, airports.geom, airports.elev FROM public.airports;

--a) Znajdź lotnisko, które położone jest najbardziej na zachód i najbardziej na wschód.

(SELECT airport_name FROM airportsNew ORDER BY ST_X(airport_geom) ASC LIMIT 1) --najb za zachód
UNION ALL
(SELECT airport_name FROM airportsNew ORDER BY ST_X(airport_geom) DESC LIMIT 1); --najb na wschód

--b) Do tabeli airportsNew dodaj nowy obiekt - lotnisko, które położone jest w punkcie środkowym drogi pomiędzy lotniskami 
--znalezionymi w punkcie a. Lotnisko nazwij airportB. Wysokość n.p.m. przyjmij dowolną.

SELECT ST_LineInterpolatePoint(ST_ShortestLine( (SELECT airport_geom FROM airportsNew ORDER BY ST_X(airport_geom) ASC LIMIT 1),
											    (SELECT airport_geom FROM airportsNew ORDER BY ST_X(airport_geom) DESC LIMIT 1)), 0.5);
												
--zapytanie zagnieżdzone może zwracać tylko jedną kolumnę

INSERT INTO airportsNew VALUES
	('airportB',
	 ST_LineInterpolatePoint(ST_ShortestLine(   (SELECT airport_geom FROM airportsNew ORDER BY ST_X(airport_geom) ASC LIMIT 1),
											    (SELECT airport_geom FROM airportsNew ORDER BY ST_X(airport_geom) DESC LIMIT 1)), 0.5),
	877.49)
	
---------------------------------------------------------------------------------------------------------------

--6. Wyznacz pole powierzchni obszaru, który oddalony jest mniej niż 1000 jednostek od najkrótszej linii łączącej 
--jezioro o nazwie ‘Iliamna Lake’ i lotnisko o nazwie „AMBLER”.

SELECT ST_Area(ST_Buffer( ST_ShortestLine ( (SELECT geom FROM public.airports WHERE airports.name = 'AMBLER'),
						 				    (SELECT geom FROM public.lakes WHERE lakes.names = 'Iliamna Lake')),
										   1000) )
---------------------------------------------------------------------------------------------------------------

--7. Napisz zapytanie, które zwróci sumaryczne pole powierzchni poligonów reprezentujących poszczególne typy drzew znajdujących 
--się na obszarze tundry i bagien (swamps).
SELECT * FROM tundra
SELECT * FROM trees

SELECT vegdesc, SUM(Area) FROM 
	(
(SELECT SUM(ST_Area(ST_Intersection(trees.geom, tundra.geom))) AS Area, vegdesc FROM trees,tundra GROUP BY vegdesc)
UNION
(SELECT SUM(ST_Area(ST_Intersection(trees.geom, swamp.geom))) AS Area, vegdesc FROM trees,swamp GROUP BY vegdesc)
	) AS X
GROUP BY vegdesc